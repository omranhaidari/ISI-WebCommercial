
@model WebCommercial.Models.Metier.Commande

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Client</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.NoCommande, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NoCommande, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                    @Html.ValidationMessageFor(model => model.NoCommande, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NoVendeur, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NoVendeur", ViewBag.NoVendeurs as IEnumerable<SelectListItem>, htmlAttributes : new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NoVendeur, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NoClient, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NoClient", ViewBag.NoClients as IEnumerable<SelectListItem>, htmlAttributes : new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NoClient, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateCommande, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateCommande, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateCommande, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Facture, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (Model.Facture == "T")
                {
                    <div class="form-check radio-inline">
                        <input class="form-check-input" type="radio" name="Facture" id="Facture1" value="T" checked>
                        <label class="form-check-label" for="Facture1">Oui</label>
                    </div>
                    <div class="form-check radio-inline">
                        <input class="form-check-input" type="radio" name="Facture" id="Facture2" value="F">
                        <label class="form-check-label" for="Facture2">Non</label>
                    </div>
                }
                else
                {
                    <div class="form-check radio-inline">
                        <input class="form-check-input" type="radio" name="Facture" id="Facture1" value="T">
                        <label class="form-check-label" for="Facture1">Oui</label>
                    </div>
                    <div class="form-check radio-inline">
                        <input class="form-check-input" type="radio" name="Facture" id="Facture2" value="F" checked>
                        <label class="form-check-label" for="Facture2">Non</label>
                    </div>
                }
                @Html.ValidationMessageFor(model => model.Facture, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-offset-2 col-md-2">
                    <input type="submit" value="Enregistrer" class="btn btn-success" />
                </div>
                <div class="col-md-2 col-sm-2">
                    @Html.ActionLink("Annuler", "Index", "Commande", new { @class = "btn btn-default btn-primary" })
                </div>
            </div>
        </div>
    </div>

}