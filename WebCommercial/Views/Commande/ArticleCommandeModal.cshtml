
<div class="modal fade" id="commandeArticleModal" tabindex="-1" role="dialog" aria-labelledby="commandeArticleModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold" id="commandeArticleModalLabel">Titre</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.DropDownList("ListArticle", ViewBag.Articles as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div id="erreurField" class="text-danger bg-warning"></div>

                    <hr />

                    <div class="row">
                        <div class="col-md-2"><strong>Article N°</strong></div>
                        <div class="col-md-6"><span id="noArt"></span></div>
                    </div>
                    <div class="row">
                        <div class="col-md-2"><strong>Libellé : </strong></div>
                        <div class="col-md-6"><span id="libelleArt"></span></div>
                    </div>
                    <div class="row">
                        <div class="col-md-2"><strong>Prix : </strong></div>
                        <div class="col-md-6"><span id="prixArt"></span> €</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2"><strong>Quantité : </strong></div>
                        <div class="col-md-6"><input id="quantiteArt" type="number" min="0" pattern="[0-9]+" required /></div>
                    </div>
                    <div class="row">
                        <div class="col-md-2"><strong>Montant total : </strong></div>
                        <div class="col-md-6"><span id="montantTotalArt"></span>€</div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="articleCommandeModalValidation">Enregistrer</button>
                <button type="button" class="btn btn-default btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
