
<div class="modal fade" id="commandeArticleModal" tabindex="-1" role="dialog" aria-labelledby="commandeArticleModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold" id="commandeArticleModalLabel">Titre</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.DropDownList("ListArticle", ViewBag.Articles as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div id="erreurField" class="text-danger bg-warning"></div>

                    <hr />

                    <div class="row">
                        <form method="post" id="GestionArticleForm" class="form-horizontal">
                            <input type="hidden" id="NoCommandeArt" name="NoCommandeArt" value="" />
                            <div class="form-group">
                                <label class="control-label col-md-2" for="NoArt">N° Article</label>
                                <div class="col-md-6"><input type="number" class="form-control" id="NoArt" name="NoArt" readonly /></div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="Libelle">Libellé</label>
                                <div class="col-md-6"><input type="text" class="form-control" id="Libelle" name="Libelle" readonly /></div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="PrixArt">Prix</label>
                                <div class="col-md-6"><input type="number" class="form-control" id="PrixArt" name="PrixArt" readonly />€</div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="QuantiteArt">Quantité</label>
                                <div class="col-md-6"><input id="QuantiteArt" name="QuantiteArt" class="form-control" type="number" min="0" value="1" pattern="[0-9]+" required /></div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="MontantTotalArt">Montant total</label>
                                <div class="col-md-6"><input id="MontantTotalArt" name="MontantTotalArt" class="form-control" />€</div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="ArtLivree">Livraison</label>
                                <div class="col-md-6">
                                    <input type="radio" id="ArtLivreeChoix1" name="Livree" value="T">
                                    <label class="control-label" for="ArtLivreeChoix1">Oui</label>

                                    <input type="radio" id="ArtLivreeChoix2" name="Livree" value="F" checked>
                                    <label class="control-label" for="ArtLivreeChoix2">Non</label>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="articleCommandeModalValidation">Enregistrer</button>
                <button type="button" class="btn btn-default btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
