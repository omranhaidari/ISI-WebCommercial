
@model  WebCommercial.Models.Metier.Clientel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Client</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @if (Model != null)
    {
<div class="form-group">
    @Html.LabelFor(model => model.NoClient, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.NoClient, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
        <input name="NoClient" type="HIDDEN" value=@(@Model.NoClient) id="NoClient" />
    </div>
</div>
}


    <div class="form-group">
        @Html.LabelFor(model => model.Societe, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Societe, new { htmlAttributes = new { @class = "form-control", required="true" } })
            @Html.ValidationMessageFor(model => model.Societe, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NomCl, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NomCl, new { htmlAttributes = new { @class = "form-control", required = "true" } })
            @Html.ValidationMessageFor(model => model.NomCl, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PrenomCl, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PrenomCl, new { htmlAttributes = new { @class = "form-control", required = "true" } })
            @Html.ValidationMessageFor(model => model.PrenomCl, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AdresseCl, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AdresseCl, new { htmlAttributes = new { @class = "form-control", required = "true" } })
            @Html.ValidationMessageFor(model => model.AdresseCl, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CodePostCl, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CodePostCl, new { htmlAttributes = new { @class = "form-control", pattern="[0-9]+", maxlength="5", title="Uniquement des chiffres", required = "true" } })
            @Html.ValidationMessageFor(model => model.CodePostCl, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.VilleCl, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.VilleCl, new { htmlAttributes = new { @class = "form-control", required = "true" } })
            @Html.ValidationMessageFor(model => model.VilleCl, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Enregistrer" class="btn btn-success" />
            </div>
            <div class="col-md-2 col-sm-2">
                @Html.ActionLink("Annuler", "Index", "Client", new { @class = "btn btn-default btn-primary" })
            </div>
        </div>
    </div>
</div>

}